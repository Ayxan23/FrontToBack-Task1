@model Info;
@{
    ViewData["Title"] = "Read";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div style="width:100px; height:auto; margin-bottom: 20px">
                <img src="~/assets/images/website-images/@Model.Image" style="width:100%; height:auto" />
            </div>
            <h4> Title: @Model.Title</h4>
            <h4> Description: @Model.Description</h4>
            <h4> Image: @Model.Image</h4>

            <a class="btn btn-info" asp-action="Index">Go Back</a>
        </div>
    </div>
</div>

