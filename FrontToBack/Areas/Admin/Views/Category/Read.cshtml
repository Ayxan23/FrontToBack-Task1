@model Category
@{
    ViewData["Title"] = "Read";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h4> Name: @Model.Name</h4>
            <h4>Products</h4>
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Image</th>
                                                <th>Name</th>
                                                <th>Price</th>
                                                <th>Rating</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var productItem in Model.Products)
                                            {
                                                <tr>
                                                    <td>
                                                        <img src="~/assets/images/website-images/@productItem.Image">
                                                    </td>
                                                    <td>@productItem.Name</td>
                                                    <td>@productItem.Price</td>
                                                    <td>@productItem.Raiting</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a class="btn btn-info" asp-action="Index">Go Back</a>
        </div>
    </div>
</div>

